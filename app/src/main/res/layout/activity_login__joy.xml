<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login_Joy"
    android:background="@drawable/ic_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="124dp"
        android:src="@drawable/chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="102dp"
        android:layout_height="53dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="137dp"
        android:text="Joy Chat's"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="301dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/contacts"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="13dp"/>
        <EditText
            android:id="@+id/user_login_edt"
            android:layout_width="237dp"
            android:layout_height="50dp"
            android:hint="@string/user_name"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textColorHint="@color/hin"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="356dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/key"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="13dp"/>
        <EditText
            android:id="@+id/password_login_edt"
            android:layout_width="237dp"
            android:layout_height="50dp"
            android:hint="@string/key"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textColorHint="@color/hin"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="237dp"
        android:layout_height="37dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="449dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_button"
        android:text="Login"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@drawable/background_text"
       />

    <TextView
        android:id="@+id/account_login_txt"
        android:textSize="14dp"
        android:layout_width="188dp"
        android:layout_height="19dp"
        android:layout_marginTop="525dp"
        android:layout_marginRight="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="SIGN UP FOR AN ACCOUNT >"
        android:textColor="#D1C2C2"/>


</androidx.constraintlayout.widget.ConstraintLayout>